{
  "name": "@lvce-editor/main-process",
  "version": "0.0.0-dev",
  "keywords": [
    "lvce-editor",
    "electron"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lvce-editor/main-process.git"
  },
  "license": "MIT",
  "author": "LVCE Editor",
  "type": "module",
  "main": "src/mainProcessMain.ts",
  "scripts": {
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch"
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/**"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10
      }
    }
  },
  "dependencies": {
    "@lvce-editor/assert": "^1.4.0",
    "@lvce-editor/ipc": "^14.5.0",
    "@lvce-editor/json-rpc": "^7.0.0",
    "@lvce-editor/pretty-error": "^2.0.0",
    "@lvce-editor/rpc": "^4.19.0",
    "@lvce-editor/rpc-registry": "^3.7.0",
    "@lvce-editor/verror": "^1.7.0",
    "debug": "^4.4.1",
    "electron-unhandled": "^5.0.0",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/debug": "^4.1.12",
    "electron": "38.0.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1"
  },
  "engines": {
    "node": ">=22"
  }
}
